/* pages/express/express.wxss */
page{
  width: 100%;
  height: 100%;
}
.wapper{
  padding: 200rpx 40rpx 0;
}
.wapper .tip{
  font-size: 24rpx;
  color: #666666;
}
.input_wapper{
  display: flex;
  flex-direction: row;
  align-items: center;
  border: 2rpx solid #43cbb3;
  margin-bottom: 40rpx;
}
.icon-saomiao{
  display: inline-block;
  padding-right: 20rpx;
  font-size: 50rpx;
  color: #999999;
}
.express_edit,.express_num{
  padding: 20rpx 30rpx;
  font-size: 32rpx;
  flex: 1;
}
.input-placeholder{
  color:#999999;
}
.express_detail{
   padding: 0 40rpx;
   margin-top: 70rpx;
   margin-bottom: 20rpx;
}
.left_time{
  padding: 20rpx 0;
  text-align: center;
  padding-right: 20rpx;
  border-right: 2rpx solid #cccccc;
  position: relative;
}

.icon-up{
  position: absolute;
  right: -18rpx;
  top: 40rpx;
  width: 32rpx;
  height: 32rpx;
  color: #999999;
  display: inline-block;
  background: #ffffff;
}
.search_list:nth-child(2) .icon-up{
  color: #09f243;
} 


.express_detail .time{
  display: block;
  font-size: 28rpx;
  width: 160rpx;
}
.express_detail .date{
  font-size: 32rpx;
}
.search_list{
  display: flex;
  justify-content: space-between;
}
.btn_sub{
  background: #ee8b16;
  color: #ffffff;
  border-color: transparent;
  border-radius: 80rpx;
  transition: all 0.3s ease;
}
.button-hover{
  background: #d37404; 
}
.express_detail .context{
  font-size: 28rpx;
  color: #666666;
  padding: 20rpx 10rpx;
  margin-left:20rpx;
  border-bottom: 2rpx solid #cccccc;
  flex:1;
}
.result{
  font-size: 36rpx;
  font-weight: bold;
  border-left: 6rpx solid #ee8b16;
  padding-left: 20rpx;
  min-height: 36rpx;
  display: block;
}
.no_relust{
  text-align: center;
  font-size: 32rpx;
  margin-top: 40rpx;
  color: #000000;
}
.fiexed{
  position: fixed;
  right: 0;
  top: 70%;
  text-align: center;
}
.zixun{
  width: 64rpx;
  height: 64rpx;
  display: block;
}
.fiexed .text{
  text-align: center;
  font-size: 28rpx;
  line-height: 1;
}
